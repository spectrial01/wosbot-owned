<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Silence logback's own status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5.5level] - %m [%c{1}]%n</pattern>
        </encoder>
        <!-- Filter out specific warnings using JaninoEventEvaluator -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <expression>
                    return message.contains("HikariPool") || 
                           message.contains("has been deprecated for versions of Hibernate") ||
                           message.contains("Unsupported JavaFX configuration") ||
                           message.contains("Loading FXML document with JavaFX API");
                </expression>
            </evaluator>
            <OnMismatch>NEUTRAL</OnMismatch>
            <OnMatch>DENY</OnMatch>
        </filter>
    </appender>

    <!-- Rolling File Appender with header -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>log/bot.log</file>
        <append>true</append>
        <immediateFlush>true</immediateFlush>
        
        <!-- Use an encoder with layout wrapping for proper header -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5.5level] - %m [%c{1}]%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- daily rollover with compression -->
            <fileNamePattern>log/bot.log.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>5</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Package-specific logger levels -->
    <logger name="cl.camodev.wosbot.main" level="INFO"/>
    <logger name="cl.camodev.wosbot.emulator" level="INFO"/>
    <logger name="cl.camodev.wosbot.serv.task" level="INFO"/>
    <logger name="cl.camodev.wosbot.launcher" level="INFO"/>

    <!-- Debug levels for specific components -->
    <logger name="cl.camodev.wosbot.emulator.impl" level="DEBUG"/>
    <logger name="cl.camodev.wosbot.serv.task.TaskQueue" level="DEBUG"/>

    <!-- Suppress verbose logging from third-party libraries -->
    <logger name="com.android.ddmlib" level="WARN"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="javafx" level="ERROR"/>
    <logger name="com.zaxxer.hikari" level="ERROR"/>
    <logger name="com.sun.javafx" level="ERROR"/>
    <logger name="javax.persistence" level="ERROR"/>
    
    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
